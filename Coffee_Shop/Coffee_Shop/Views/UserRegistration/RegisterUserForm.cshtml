
@{
    ViewData["Title"] = "RegisterUserForm";
}

@model Coffee_Shop.Models.UserRegistration.RegisterUserFormViewModel

    <form asp-controller="UserRegistration" asp-action="RegisterUserFormResult" method="post">

        <label>UserName</label>
        <input asp-for="userName" />
        <br />
        @Html.TextBoxFor(m => m.email, new { @placeholder = "E-mail" })
        <br />
        @Html.ValidationMessageFor(m => m.email)
        <br />
        <label>Password</label>
        <input type="password" asp-for="password" />
        <br />
        <label>Confirm Password</label>
        <input type="password" />
        <br />
        <label>Date of Birth</label>
        <input type="date" asp-for="dateOfBirth" />
        <br />
        <label>Home State:</label>

        <select asp-for="homeState">
            <option value="Michigan">MI</option>
            <option value="NewYork">New York</option>
            <option value="California">California</option>
            <option value="Illinois">Illinois</option>
        </select>


        <button>Register User</button>

    </form>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>



